<h2>Listing Surveys</h2>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>State</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for survey <- @surveys do %>
    <tr>
      <td><%= survey["id"] %></td>
      <td><%= survey["name"] %></td>
      <td><%= survey["state"] %></td>
      <td class="text-right">
        <span><%= link "Track", to: track_survey_path(@conn, :track_survey, @project_id, survey["id"], elem(html_escape(survey["name"]), 1)), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
